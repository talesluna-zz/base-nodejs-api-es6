{
  "name": "base-nodejs-api-es6",
  "version": "3.0.1",
  "description": "Base for REST API using NodeJS/ExpressJS, with Docker or PM2 deployment.",
  "author": "Tales Luna <tales.ferreira.luna@gmail.com>",
  "license": "MIT",
  "main": "src/app.ts",
  "scripts": {
    "dev": "export NODE_ENV='development' && nodemon --exec babel-node --extensions '.ts' src/app.ts --use_strict",
    "test": "export NODE_ENV='test' && mocha --opts tests/mocha.opts",
    "build": "export NODE_ENV='production' && npm run clean && babel --extensions '.ts' src --out-dir ./dist --copy-files",
    "clean": "rm -rf dist && mkdir dist",
    "start": "pm2 start pm2.yml",
    "stop": "pm2 stop pm2.yml",
    "reatrt": "pm2 restart pm2.yml",
    "start-docker": "sudo docker-compose up -d ; sudo docker ps",
    "stop-docker": "sudo docker-compose stop"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.40",
    "@types/joi": "^13.4.4",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.9",
    "@types/node": "^10.9.4",
    "@types/sequelize": "^4.27.25",
    "assert": "^1.4.1",
    "babel-preset-minify": "^0.5.0-alpha.3cc09dcf",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "eslint": "^5.5.0",
    "eslint-plugin-promise": "^4.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "helmet": "^3.13.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.6.0",
    "joi-i18n": "^13.1.2",
    "lodash": "^4.17.5",
    "log4js": "^3.0.5",
    "mongoose": "^5.0.0",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "mysql2": "^1.6.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "request-promise": "^4.2.1",
    "sequelize": "^4.38.0"
  }
}
